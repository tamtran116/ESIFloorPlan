	<context-param>  
		<param-name>contextConfigLocation</param-name>  
		<param-value>
		    /WEB-INF/esi-servlet.xml,
		    /WEB-INF/application-security.xml
		</param-value>  
	</context-param> 
  
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener> 
  
  
  <!-- Need context-param for where UploadServlet will store the file -->
	<context-param> 
    	<description>Location to store uploaded file</description> 
    	<param-name>file-upload-dir</param-name> 
    	<param-value>/Users/tamtran/Documents/workspace/ESIFloorPlan/WebContent/WEB-INF/uploaded/data/</param-value>
	</context-param>
	<context-param>
		<description>Location to store created image files</description>
		<param-name>file-image-dir</param-name>
		<param-value>/Users/tamtran/Documents/workspace/ESIFloorPlan/WebContent/WEB-INF/uploaded/images/</param-value>
	</context-param>
	<!-- multipart-config is set so that files larger than 2MB can be uploaded -->
